<project name="FPUpdater" basedir="." default="release_64">
	<property name="old.version" value="?{release.ini:releases:current}"/>
	<regexp property="old.build" text="${old.version}" pattern="^.*\.([0-9]+)$" subst="\1"/>
	<property name="build" value="={${old.build}}"/>
	<regexp property="version" text="${old.version}" pattern="\.[0-9]*$" subst=".${build}"/>
	<regexp property="comma.version" pattern="\." subst="," text="${version}"/>
	<regexp property="version2" pattern="^[0-9]*\.[0-9]*" text="${version}"/>
	<tstamp>
		<format property="when" pattern="yyyy,mm,dd,HH,nn,ss"/>
		<format property="date.tag" pattern="yyyy-mm-dd"/>
	</tstamp>
	<property name="basepath" value=""/>
	<regexp property="basepath" text="${basedir}" pattern="^\/" subst=""/>
	<property name="src" value="${basepath}/src"/>
	<property name="test" value="${basepath}/test"/>
	<property name="setup" value="${basepath}/setup"/>
	<property name="brcc" value="${setup}/util/brcc32.exe"/>
	<property name="FPUpdater" value="${src}/FPUpdater"/>
	<property name="FPUpdaterCli" value="${src}/FPUpdaterCli"/>
	<target name="prepare">
		<echo message="version=${version}"/>
		<echo message="build=${build}"/>
		<delete dir="${src}">
			<include name="**/*.dcu"/>
			<include name="**/*.exe"/>
			<include name="**/*.rsm"/>
			<include name="**/*.dsm"/>
			<include name="**/*.log"/>
			<include name="**/*.~*"/>
			<include name="**/*.bak"/>
		</delete>
	</target>
	<target name="clean">
		<delete dir="${dcu}">
			<include name="*.dcu"/>
		</delete>
		<delete dir="${setup}/Bin/Win32">
			<include name="*.exe"/>
		</delete>
		<delete dir="${setup}/Bin/Win32">
			<include name="*"/>
		</delete>
		<delete dir="${setup}/Bin/Win64">
			<include name="*.exe"/>
		</delete>
	</target>
	<!-- ***** Compile FPUpdater ***** -->
	<target name="Compile-FPUpdater-32" depends="prepare">
		<delete dir="${dcu}">
			<include name="*.dcu"/>
		</delete>
		<echo input="${FPUpdater}/FPUpdater.rt" file="${FPUpdater}/FPUpdater.rc"/>
		<exec executable="msbuild.exe">
			<arg value="/clp:ErrorsOnly /t:Build  ${FPUpdater}/FPUpdater.dproj /p:Platform=Win32 /p:Config=Release /p:DCC_ExeOutput=${setup}/Bin/Win32"/>
		</exec>
	</target>
	
	<target name="Compile-FPUpdater-64" depends="prepare">
		<delete dir="${dcu}">
			<include name="*.dcu"/>
		</delete>
		<echo input="${FPUpdater}/FPUpdater.rt" file="${FPUpdater}/FPUpdater.rc"/>
		<exec executable="msbuild.exe">
			<arg value="/clp:ErrorsOnly /t:Build  ${FPUpdater}/FPUpdater.dproj /p:Platform=Win64 /p:Config=Release /p:DCC_ExeOutput=${setup}/Bin/Win64"/>
		</exec>
	</target>
	
	<!-- ***** Compile FPUpdater ***** -->
	<target name="Compile-FPUpdaterCli-32" depends="prepare">
		<delete dir="${dcu}">
			<include name="*.dcu"/>
		</delete>
		<exec executable="msbuild.exe">
			<arg value="/clp:ErrorsOnly /t:Build  ${FPUpdaterCli}/FPUpdaterCli.dproj /p:Platform=Win32 /p:Config=Release /p:DCC_ExeOutput=${setup}/Bin/Win32"/>
		</exec>
	</target>
	
	<!-- ***** Compile FPUpdater ***** -->
	<target name="Compile-FPUpdaterCli-64" depends="prepare">
		<delete dir="${dcu}">
			<include name="*.dcu"/>
		</delete>
		<exec executable="msbuild.exe">
			<arg value="/clp:ErrorsOnly /t:Build  ${FPUpdaterCli}/FPUpdaterCli.dproj /p:Platform=Win64 /p:Config=Release /p:DCC_ExeOutput=${setup}/Bin/Win64"/>
		</exec>
	</target>
	
	<target name="beeline_test_setup32">
		<copy tofile="${setup}/bin/Archive.zip">
			<include name="${setup}/bin/ArchiveBeelineTest.zip"/>
		</copy>
		
		<property name="Architecture" value=""/>
		<property name="Arch" value="Win32"/>
		<property name="Archbit" value="32bit"/>
		<property name="Arch2" value="(32-bit)"/>
		<echo input="${setup}/setup_template.iss" file="${setup}/setup.iss"/>
		<exec basedir="${setup}" executable="iscc">
			<arg value="${setup}/Setup.iss"/>
			<arg value="/Q"/>
		</exec>
		<move tofile="${basepath}/dist/Test/FPUpdater_${version2}_${build}_x32.exe">
			<include name="${setup}/setup.exe"/>
		</move>
		<copy tofile="${basepath}/dist/Test/FPUpdater_x32.exe">
			<include name="${setup}/Bin/Win32/FPUpdater.exe"/>
		</copy>
		<copy tofile="${basepath}/dist/Test/FPUpdaterCli_x32.exe">
			<include name="${setup}/Bin/Win32/FPUpdaterCli.exe"/>
		</copy>
		<delete file="${setup}/setup.iss"/>
		<move tofile="${basepath}/dist/Test/Archive.zip">
			<include name="${setup}/bin/Archive.zip"/>
		</move>
	</target>
	
	<target name="beeline_work_setup32">
		<copy tofile="${setup}/bin/Archive.zip">
			<include name="${setup}/bin/ArchiveBeelineWork.zip"/>
		</copy>
		
		<property name="Architecture" value=""/>
		<property name="Arch" value="Win32"/>
		<property name="Archbit" value="32bit"/>
		<property name="Arch2" value="(32-bit)"/>
		<echo input="${setup}/setup_template.iss" file="${setup}/setup.iss"/>
		<exec basedir="${setup}" executable="iscc">
			<arg value="${setup}/Setup.iss"/>
			<arg value="/Q"/>
		</exec>
		<move tofile="${basepath}/dist/Work/FPUpdater_${version2}_${build}_x32.exe">
			<include name="${setup}/setup.exe"/>
		</move>
		<copy tofile="${basepath}/dist/Work/FPUpdater_x32.exe">
			<include name="${setup}/Bin/Win32/FPUpdater.exe"/>
		</copy>
		<copy tofile="${basepath}/dist/Work/FPUpdaterCli_x32.exe">
			<include name="${setup}/Bin/Win32/FPUpdaterCli.exe"/>
		</copy>
		<delete file="${setup}/setup.iss"/>
		<move tofile="${basepath}/dist/Work/Archive.zip">
			<include name="${setup}/bin/Archive.zip"/>
		</move>
	</target>
	
	<target name="beeline_test_setup64">
		<copy tofile="${setup}/bin/Archive.zip">
			<include name="${setup}/bin/ArchiveBeelineTest.zip"/>
		</copy>
		
		<property name="Architecture" value="ArchitecturesInstallIn64BitMode=x64"/>
		<property name="Arch" value="Win64"/>
		<property name="Archbit" value="64bit"/>
		<property name="Arch2" value="(64-bit)"/>
		<echo input="${setup}/setup_template.iss" file="${setup}/setup.iss"/>
		<exec basedir="${setup}" executable="iscc">
			<arg value="Setup.iss"/>
			<arg value="/Q"/>
		</exec>
		<move tofile="${basepath}/dist/Test/FPUpdater_${version2}_${build}_x64.exe">
			<include name="${setup}/setup.exe"/>
		</move>
		<delete file="${setup}/setup.iss"/>
		<copy tofile="${basepath}/dist/Test/FPUpdater_x64.exe">
			<include name="${setup}/Bin/Win64/FPUpdater.exe"/>
		</copy>
		<copy tofile="${basepath}/dist/Test/FPUpdaterCli_x64.exe">
			<include name="${setup}/Bin/Win64/FPUpdaterCli.exe"/>
		</copy>
		<delete file="${setup}/setup.iss"/>
		<move tofile="${basepath}/dist/Test/Archive.zip">
			<include name="${setup}/bin/Archive.zip"/>
		</move>
	</target>
	
	<target name="beeline_work_setup64">
		<copy tofile="${setup}/bin/Archive.zip">
			<include name="${setup}/bin/ArchiveBeelineWork.zip"/>
		</copy>
		
		<property name="Architecture" value="ArchitecturesInstallIn64BitMode=x64"/>
		<property name="Arch" value="Win64"/>
		<property name="Archbit" value="64bit"/>
		<property name="Arch2" value="(64-bit)"/>
		<echo input="${setup}/setup_template.iss" file="${setup}/setup.iss"/>
		<exec basedir="${setup}" executable="iscc">
			<arg value="Setup.iss"/>
			<arg value="/Q"/>
		</exec>
		<move tofile="${basepath}/dist/Work/FPUpdater_${version2}_${build}_x64.exe">
			<include name="${setup}/setup.exe"/>
		</move>
		<delete file="${setup}/setup.iss"/>
		<copy tofile="${basepath}/dist/Work/FPUpdater_x64.exe">
			<include name="${setup}/Bin/Win64/FPUpdater.exe"/>
		</copy>
		<copy tofile="${basepath}/dist/Work/FPUpdaterCli_x64.exe">
			<include name="${setup}/Bin/Win64/FPUpdaterCli.exe"/>
		</copy>
		<delete file="${setup}/setup.iss"/>
		<move tofile="${basepath}/dist/Work/Archive.zip">
			<include name="${setup}/bin/Archive.zip"/>
		</move>
	</target>
	
	<target name="build">
		<ini file="release.ini">
			<write section="releases" key="current" value="${version}"/>
			<write section="releases" key="last_date" value="${date.tag}"/>
		</ini>
	</target>
	<target name="compile32" depends="Compile-FPUpdater-32,Compile-FPUpdaterCli-32"/>
	<target name="compile64" depends="Compile-FPUpdater-64,Compile-FPUpdaterCli-64"/>
	<target name="release" depends="clean,prepare,compile32,compile64,beeline_test_setup32,beeline_work_setup32,beeline_test_setup64,beeline_work_setup64,clean"/>
	<target name="release_64" depends="clean,prepare,compile64,beeline_test_setup64,beeline_work_setup64,clean"/>
</project>
